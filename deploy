# Installs packages necessary to run sklearn on Python 3 deployed on an AWS Ubuntu instance
# to run just scp the file to remote then 
# $ chmod 755 deploy
# $ ./deploy

sudo apt-get -y update
sudo apt-get -y install g++ 
sudo apt-get -y install gfortran
sudo apt-get -y install python3.4-dev
sudo apt-get -y install python3-pip --fix-missing
sudo apt-get -y install libblas3gf
sudo apt-get -y install libblas-doc
sudo apt-get -y install libblas-dev
sudo apt-get -y install liblapack3gf
sudo apt-get -y install liblapack-doc
sudo apt-get -y install liblapack-dev
sudo pip3 install numpy
sudo pip3 install scipy
sudo pip3 install scikit-learn
sudo pip3 install pandas
sudo pip3 install ipython
